<body>
    <div id="margin"></div>
    <div id="text_id">Tu é baitola?</div>
    <button id="button_1" class="button">Não</button>
    <button id="button_2" class="button">Sim</button>

    <script>
        const button1 = document.getElementById('button_1');
        const button2 = document.getElementById('button_2');
        const body = document.body;

        function moveButton(e) {
            const rect = button1.getBoundingClientRect();
            if (Math.abs(e.clientX - rect.left) < 50 && Math.abs(e.clientY - rect.top) < 50) {
                const x = Math.random() * (window.innerWidth - rect.width);
                const y = Math.random() * (window.innerHeight - rect.height);
                button1.style.position = 'absolute';
                button1.style.left = `${x}px`;
                button1.style.top = `${y}px`;
            }
        }

        function accepted() {
            alert('SEMPRE DESCONFIEI KKKKKKK?');
        }

        function denied() {
            button1.style.display = 'none';
        }

        body.addEventListener('mousemove', moveButton);
        button1.addEventListener('click', denied);
        button2.addEventListener('click', accepted);
    </script>
</body>
</html>
